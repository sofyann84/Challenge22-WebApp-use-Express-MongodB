<!DOCTYPE html>
<html>

<head>
  <title> BREAD </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <div class="card">
      <h5 class="card-header">WELCOME</h5>
      <div class="card-body">

        <!-- Form Search -->
        <div class="container">
          <form action="" method="GET" id="searchForm">
            <input type="hidden" id="page" name="page" value="1">
            <div class="container mt-4">
              <h5 style="text-align: left">SEARCH : </h5>
              <br>

              <div class="row">
                <div class="col">
                  <div class="form-check">
                    <input class="form-check-input" name="checkString" type="checkbox" id="cString">
                    <label class="form-check-label" name="checkString" for="checkString">
                      String
                    </label>
                  </div>
                </div>
                <div class="col-10">
                  <div class="form-group">
                    <input type="text" name="string" class="form-control" id="string" placeholder="String">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkInteger" id="cInteger">
                    <label class="form-check-label" for="integer">
                      Integer
                    </label>
                  </div>
                </div>
                <div class="col-10">
                  <div class="form-group">
                    <input type="number" class="form-control" id="integer" name="integer" placeholder="Integer">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkFloat" id="cFloat">
                    <label class="form-check-label" for="checkFloat">
                      Float
                    </label>
                  </div>
                </div>
                <div class="col-10">
                  <div class="form-group">
                    <input type="number" class="form-control" step="0.01" id="float" name="float" placeholder="Float">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-2">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkDate" id="cDate">
                    <label class="form-check-label" for="date">
                      Date
                    </label>
                  </div>
                </div>
                <div class="col-3">
                  <div class="form-group">
                    <input type="date" class="form-control" name="startDate" id="startDate" placeholder="masukan date">
                  </div>
                </div>
                <div class="w-100"></div>
                <p class="col offset-2">to</p>
                <div class="w-100"></div>
                <div class="col-3 offset-2">
                  <div class="form-group">
                    <input type="date" class="form-control" name="endDate" id="endDate" placeholder="masukan date">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkBoolean" id="cBoolean">
                    <label class="form-check-label" for="boolean">
                      Boolean
                    </label>
                  </div>
                </div>
                <div class="col-10">
                  <div class="form-group">
                    <select name="boolean" id="boolean" class="form-control">
                      <option selected disabled> choose the boolean</option>
                      <option name="bool" class="form-control" value="true">True</option>
                      <option name="bool" class="form-control" value="false">False</option>
                    </select>
                  </div>
                </div>
              </div>

              <button type="submit" class="btn btn-dark" id="search-btn">Search</button>
              <a href="/">
                <button type="button" class="btn btn-dark " id="reset">Reset</button>
              </a>
            </div>
          </form>
        </div>
        <br>

        <div class="container">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">String</th>
                <th scope="col">Integer</th>
                <th scope="col">Float</th>
                <th scope="col">Date</th>
                <th scope="col">Boolean</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <!-- table content use Jquery -->
            </tbody>
          </table>
          <!-- Pagination -->
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <!-- diisi dengan menggunakan JQuery -->
            </ul>
          </nav>
          <!--  pagination end -->
          <a class="btn btn-primary" href="#" role="button" data-toggle="modal" data-target="#addModal">Add New</a>
        </div>
      </div>


    </div>
  </div>


  <!-- Add Modal Start-->

  <div class="modal fade" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document" aria-labelledby="myExtraLargeModalLabel"
      aria-hidden="true">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="addModalLabel" text-align:center>Add New Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div> <!-- Modal header-->

        <div class="modal-body">
          <form id="addForm">
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="string">
                    String
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="text" class="form-control" id="addString" placeholder="String" name="string">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="integer">
                    Integer
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="number" class="form-control" id="addInteger" placeholder="Integer" name="integer">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="float">
                    Float
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="number" step="0.01" class="form-control" id="addFloat" placeholder="Float" name="float">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="date">
                    Date
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="date" class="form-control" id="addDate" name="date">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="modalBoolean">
                    Boolean
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <select class="custom-select custom-select" id="addBoolean" class="form-control" name="boolean">
                    <option selected disabled> choose the boolean</option>
                    <option class="form-control" value="true">True</option>
                    <option class="form-control" value="false">False</option>
                  </select>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="modal-footer btn-add">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
          <button type="submit" id="submit-data" class="btn btn-primary btn-save" dataid=""
            data-dismiss="modal">Submit</button>
        </div>
      </div> <!-- modal content-->
    </div>
  </div>
  <!-- Add Modal End -->



  <!-- Edit Modal Start-->
  <div class="modal fade" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document" aria-labelledby="myExtraLargeModalLabel"
      aria-hidden="true">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel" text-align:center>Edit Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div> <!-- Modal header-->


        <div class="modal-body">
          <form id="editForm">
            <div class="row">
              <div class="col">
                <div class="form-group">
                  <input type="hidden" class="form-control" id="editId" placeholder="ID" name="id" disabled>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="string">
                    String
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="text" class="form-control" id="editString" placeholder="String" name="string">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="integer">
                    Integer
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="number" class="form-control" id="editInteger" placeholder="Integer" name="integer">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="float">
                    Float
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="number" step="0.01" class="form-control" id="editFloat" placeholder="Float" name="float">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="date">
                    Date
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <input type="date" class="form-control" id="editDate" name="date">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <div class="form-check">
                  <label class="form-check-label" for="modalBoolean">
                    Boolean
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-group">

                  <select class="custom-select custom-select" id="editBoolean" class="form-control" name="boolean">
                    <!-- Diisi dengan menggunakan data-edit -->
                  </select>

                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="modal-footer btn-edit">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
          <button type="submit" id="edit-data" class="btn btn-primary btn-change" data-dismiss="modal">Save
            change</button>
        </div>
      </div> <!-- modal content-->
    </div>
  </div>
  <!-- Edit Modal End -->




  <!--not found Modal start-->
  <div class="modal fade" id="notFoundModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document" aria-labelledby="myExtraLargeModalLabel"
      aria-hidden="true">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel" text-align:center>Data tidak ditemukan</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <p>Data yang Anda cari tidak ditemukan, silahkan coba lagi</p>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
        </div>
      </div> <!-- modal content-->
    </div>
  </div>
  <!-- not fount modal end -->


  <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js" type="text/javascript"></script>
  <script src="https://code.jquery.com/jquery-3.5.0.js" integrity="sha256-r/AaFHrszJtwpe+tHyNi/XCfMxYpbsRg2Uqn0x3s2zc="
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>

  <script type="text/javascript" src="./javascripts/script.js"></script>
</body>

</html>